<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.fernandogodinez.loteria.play"
    android:id="@+id/play"
    android:background="@drawable/b_tabla_background">


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3X3"
        android:id="@+id/button4_3x3"
        android:onClick="seleccionarObjetivo3x3"
        android:src="@drawable/b_cartas33"
        android:background="@null"
        android:layout_above="@+id/button4_4x4"
        android:layout_alignStart="@+id/button4_4x4"
        android:layout_marginTop="27dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4X4"
        android:id="@+id/button4_4x4"
        android:onClick="seleccionarObjetivo4x4"
        android:src="@drawable/b_cartas44"
        android:background="@null"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/button4_5x5"
        android:layout_marginTop="27dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5X%"
        android:id="@+id/button4_5x5"
        android:onClick="seleccionarObjetivo5x5"
        android:src="@drawable/b_cartas55"
        android:background="@null"
        android:layout_below="@+id/button4_4x4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/letrero_play"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp" />
</RelativeLayout>

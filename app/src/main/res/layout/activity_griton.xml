<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.fernandogodinez.loteria.Griton"
    android:id="@+id/griton"
    android:background="@drawable/lote_backgroud">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/View_carta"
        android:layout_above="@+id/button5"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next"
        android:id="@+id/next"
        android:onClick="verJugadas"
        android:src="@drawable/b_jugadas"
        android:layout_alignParentBottom="true"
        android:background="@null"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp" />

    <ImageButton
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/jugadas"
        android:id="@+id/button5"
        android:onClick="nextCard"
        android:src="@drawable/b_siguiente"
        android:background="@null"
        android:layout_alignTop="@+id/next"
        android:layout_alignEnd="@+id/View_carta"
        android:adjustViewBounds="false"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp" />

</RelativeLayout>
